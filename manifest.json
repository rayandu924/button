{
  "name": "Shortcut Tile",
  "version": "1.2.0",
  "sdkVersion": "2.1",
  "renderMode": "native",
  "entry": "index.js",
  "description": "Customizable glassmorphism tile shortcut to open URLs, files, folders, or applications with beautiful hover effects.",
  "author": "MyWallpaper Community",
  "type": "widget",
  "categories": [
    "utilities",
    "productivity"
  ],
  "license": "MIT",
  "repository": "https://github.com/rayandu924/mywallpaper-shortcut-tile",
  "capabilities": {
    "hotReload": true,
    "systemEvents": [
      "viewport:resize"
    ]
  },
  "permissions": {
    "system": {
      "openPath": true
    },
    "fileAccess": {
      "reason": "To launch local applications and files"
    }
  },
  "defaultLayout": {
    "xPercent": 50,
    "yPercent": 50,
    "widthPercent": 12,
    "heightPercent": 15,
    "rotation": 0
  },
  "settings": {
    "actionSection": {
      "type": "section",
      "label": "\ud83c\udfaf Action"
    },
    "actionMode": {
      "type": "select",
      "label": "Mode",
      "default": "preset",
      "options": [
        {
          "value": "preset",
          "label": "Application (preset)"
        },
        {
          "value": "url",
          "label": "URL personnalis\u00e9e"
        },
        {
          "value": "file",
          "label": "Fichier local"
        },
        {
          "value": "folder",
          "label": "Dossier local"
        },
        {
          "value": "custom",
          "label": "Protocole personnalis\u00e9"
        }
      ]
    },
    "appPreset": {
      "type": "select",
      "label": "Application",
      "description": "Choisissez une application \u00e0 lancer",
      "default": "spotify",
      "options": [
        {
          "value": "spotify",
          "label": "\ud83c\udfb5 Spotify"
        },
        {
          "value": "discord",
          "label": "\ud83d\udcac Discord"
        },
        {
          "value": "vscode",
          "label": "\ud83d\udcbb VS Code"
        },
        {
          "value": "slack",
          "label": "\ud83d\udce2 Slack"
        },
        {
          "value": "telegram",
          "label": "\u2708\ufe0f Telegram"
        },
        {
          "value": "steam",
          "label": "\ud83c\udfae Steam"
        },
        {
          "value": "obs",
          "label": "\ud83c\udfa5 OBS Studio"
        },
        {
          "value": "figma",
          "label": "\ud83c\udfa8 Figma"
        },
        {
          "value": "notion",
          "label": "\ud83d\udcdd Notion"
        },
        {
          "value": "chrome",
          "label": "\ud83c\udf10 Google Chrome"
        },
        {
          "value": "firefox",
          "label": "\ud83e\udd8a Firefox"
        },
        {
          "value": "terminal",
          "label": "\u2b1b Terminal"
        }
      ]
    },
    "targetUrl": {
      "type": "string",
      "label": "URL",
      "description": "Adresse web \u00e0 ouvrir",
      "default": "https://github.com"
    },
    "targetFile": {
      "type": "file",
      "label": "Fichier \u00e0 ouvrir",
      "description": "S\u00e9lectionnez un fichier ou ex\u00e9cutable"
    },
    "targetFolder": {
      "type": "string",
      "label": "Chemin du dossier",
      "description": "Ex: /home/user/Documents ou C:\\Users\\Documents",
      "default": ""
    },
    "targetProtocol": {
      "type": "string",
      "label": "Protocole personnalis\u00e9",
      "description": "Ex: myapp://open",
      "default": ""
    },
    "iconSection": {
      "type": "section",
      "label": "\ud83d\uddbc\ufe0f Icon"
    },
    "iconSource": {
      "type": "select",
      "label": "Source de l'ic\u00f4ne",
      "default": "auto",
      "options": [
        {
          "value": "auto",
          "label": "Automatique (selon l'app)"
        },
        {
          "value": "emoji",
          "label": "Emoji personnalis\u00e9"
        },
        {
          "value": "url",
          "label": "URL d'image"
        },
        {
          "value": "file",
          "label": "Fichier local"
        }
      ]
    },
    "iconEmoji": {
      "type": "string",
      "label": "Emoji",
      "default": "\ud83d\ude80"
    },
    "iconUrl": {
      "type": "string",
      "label": "URL de l'ic\u00f4ne",
      "description": "URL vers une image (PNG, JPG, GIF, SVG)",
      "default": ""
    },
    "iconFile": {
      "type": "image",
      "label": "Fichier ic\u00f4ne"
    },
    "iconSize": {
      "type": "range",
      "label": "Taille de l'ic\u00f4ne",
      "min": 24,
      "max": 128,
      "step": 4,
      "default": 48
    },
    "labelSection": {
      "type": "section",
      "label": "\ud83d\udcdd Label"
    },
    "showLabel": {
      "type": "boolean",
      "label": "Afficher le label",
      "default": true
    },
    "labelMode": {
      "type": "select",
      "label": "Texte du label",
      "default": "auto",
      "options": [
        {
          "value": "auto",
          "label": "Automatique (nom de l'app)"
        },
        {
          "value": "custom",
          "label": "Personnalis\u00e9"
        }
      ]
    },
    "labelCustom": {
      "type": "string",
      "label": "Label personnalis\u00e9",
      "default": ""
    },
    "labelSize": {
      "type": "range",
      "label": "Taille du texte",
      "min": 10,
      "max": 24,
      "step": 1,
      "default": 14
    },
    "labelColor": {
      "type": "color",
      "label": "Couleur du texte",
      "default": "#ffffff"
    },
    "tileSection": {
      "type": "section",
      "label": "\ud83c\udfa8 Apparence"
    },
    "tileColor": {
      "type": "color",
      "label": "Couleur de fond",
      "default": "#ffffff"
    },
    "tileOpacity": {
      "type": "range",
      "label": "Opacit\u00e9 du fond",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 10
    },
    "blurAmount": {
      "type": "range",
      "label": "Flou (blur)",
      "min": 0,
      "max": 30,
      "step": 1,
      "default": 12
    },
    "borderRadius": {
      "type": "range",
      "label": "Arrondis",
      "min": 0,
      "max": 50,
      "step": 2,
      "default": 16
    },
    "borderWidth": {
      "type": "range",
      "label": "\u00c9paisseur bordure",
      "min": 0,
      "max": 4,
      "step": 0.5,
      "default": 1
    },
    "borderColor": {
      "type": "color",
      "label": "Couleur bordure",
      "default": "#ffffff"
    },
    "borderOpacity": {
      "type": "range",
      "label": "Opacit\u00e9 bordure",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20
    },
    "effectsSection": {
      "type": "section",
      "label": "\u2728 Effets"
    },
    "enableGlow": {
      "type": "boolean",
      "label": "Activer le glow",
      "default": true
    },
    "glowColor": {
      "type": "color",
      "label": "Couleur du glow",
      "default": "#8b5cf6"
    },
    "glowIntensity": {
      "type": "range",
      "label": "Intensit\u00e9 du glow",
      "min": 0,
      "max": 30,
      "step": 1,
      "default": 10
    },
    "hoverScale": {
      "type": "range",
      "label": "Zoom au survol",
      "min": 1,
      "max": 1.3,
      "step": 0.02,
      "default": 1.08
    },
    "clickScale": {
      "type": "range",
      "label": "Zoom au clic",
      "min": 0.8,
      "max": 1,
      "step": 0.02,
      "default": 0.95
    }
  }
}